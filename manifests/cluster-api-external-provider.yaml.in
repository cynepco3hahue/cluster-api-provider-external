---
apiVersion: v1
kind: Namespace
metadata:
  labels:
    cluster-api-provider-baremetal.kubevirt.io: ""
  name: {{.Namespace}}
---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: cluster-api-provider-baremetal-controller
  namespace: {{.Namespace}}
  labels:
    cluster-api-provider-baremetal.kubevirt.io: ""
spec:
  selector:
    matchLabels:
      cluster-api-provider-baremetal.kubevirt.io: ""
      k8s-app: "controller"
  replicas: 1
  template:
    metadata:
      labels:
        cluster-api-provider-baremetal.kubevirt.io: ""
        k8s-app: "controller"
    spec:
      securityContext:
        runAsNonRoot: true
        runAsUser: 65534
      serviceAccountName: cluster-api-provider-baremetal
      tolerations:
      - effect: NoSchedule
        key: node-role.kubernetes.io/master
      - key: CriticalAddonsOnly
        operator: Exists
      - effect: NoExecute
        key: node.alpha.kubernetes.io/notReady
        operator: Exists
      - effect: NoExecute
        key: node.alpha.kubernetes.io/unreachable
        operator: Exists
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: node-role.kubernetes.io/master
                operator: Exists
      containers:
      - name: controller-manager
        image: {{.ContainerPrefix}}/origin-baremetal-machine-controllers:{{.ContainerTag}}
        command:
        - "./manager"
        imagePullPolicy: {{.ImagePullPolicy}}
        resources:
          requests:
            cpu: 100m
            memory: 20Mi
          limits:
            cpu: 100m
            memory: 30Mi
      - name: machine-controller
        image: {{.ContainerPrefix}}/origin-baremetal-machine-controllers:{{.ContainerTag}}
        env:
          - name: NODE_NAME
            valueFrom:
              fieldRef:
                fieldPath: spec.nodeName
        command:
          - /machine-controller-manager
        imagePullPolicy: {{.ImagePullPolicy}}

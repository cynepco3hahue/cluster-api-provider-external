---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: cluster-api-provider-baremetal
  labels:
    cluster-api-provider-baremetal.kubevirt.io: ""
rules:
  - apiGroups:
      - cluster.k8s.io
    resources:
      - clusters
      - clusters/status
      - machines
      - machines/status
      - machinesets
      - machinesets/status
      - machinedeployments
      - machinedeployments/status
    verbs:
      - get
      - list
      - update
      - watch
  - apiGroups:
      - ''
    resources:
      - nodes
      - pods
    verbs:
      - list
      - watch
  - apiGroups:
      - ''
    resources:
      - events
    verbs:
      - update
      - create
      - patch
  - apiGroups:
      - batch
    resources:
      - jobs
    verbs:
      - create
      - update
      - delete
      - list
      - watch
      - get
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: cluster-api-provider-baremetal
  labels:
    cluster-api-provider-baremetal.kubevirt.io: ""
roleRef:
  kind: ClusterRole
  name: cluster-api-provider-baremetal
  apiGroup: rbac.authorization.k8s.io
subjects:
  - kind: ServiceAccount
    name: cluster-api-provider-baremetal
    namespace: {{.Namespace}}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: cluster-api-provider-baremetal
  namespace: {{.Namespace}}
  labels:
    cluster-api-provider-baremetal.kubevirt.io: ""
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: ansible-job
  namespace: {{.Namespace}}
  labels:
    cluster-api-provider-baremetal.kubevirt.io: ""
